<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/nf_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="3"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nf_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            android:textColor="@color/colorAccent"
            android:text="@string/music_title"
            />
        <TextView
            android:id="@+id/nf_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:textSize="10dp"
            android:textColor="@color/colorAccent"
            android:text="@string/music_artist"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="6"
        android:layout_gravity="center_vertical">


        <ImageView
            android:id="@+id/nf_exit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:srcCompat="@android:drawable/ic_delete" />


        <ImageView
            android:id="@+id/nf_previous"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            app:srcCompat="@android:drawable/ic_media_previous" />

        <ImageView
            android:id="@+id/nf_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/nf_previous"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            app:srcCompat="@android:drawable/ic_media_pause" />

        <ImageView
            android:id="@+id/nf_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/nf_play"
            android:layout_centerVertical="true"
            app:srcCompat="@android:drawable/ic_media_next" />
    </RelativeLayout>
</LinearLayout>
