<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/nf_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@mipmap/ic_launcher_round" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/nf_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:textSize="15dp"
            android:text="歌名"
             />
        <TextView
            android:id="@+id/nf_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="25dp"
            android:textSize="10dp"
            android:text="歌手"
             />

        <ImageView
            android:id="@+id/nf_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:srcCompat="@android:drawable/ic_delete" />


        <ImageView
            android:id="@+id/nf_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/nf_play"
            app:srcCompat="@android:drawable/ic_media_previous" />

        <ImageView
            android:id="@+id/nf_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            app:srcCompat="@android:drawable/ic_media_pause" />

        <ImageView
            android:id="@+id/nf_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/nf_play"
            android:layout_centerVertical="true"
            app:srcCompat="@android:drawable/ic_media_next" />
    </RelativeLayout>
</LinearLayout>
